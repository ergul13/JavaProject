<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="controller.TrafficController">

    <!-- Kavşak Merkezi -->
    <Pane fx:id="intersectionPane" layoutX="771.0" layoutY="290.0" prefHeight="346.0" prefWidth="364.0" style="-fx-background-color: lightgray; -fx-border-color: black;" AnchorPane.bottomAnchor="50.0">
        <!-- Dikey Yol -->
        <Rectangle fill="gray" height="349.0" width="50" x="175" y="0" />
        <!-- Yatay Yol -->
        <Rectangle fill="gray" height="50" layoutX="15.0" layoutY="-4.0" width="400" x="0" y="175" />

        <!-- Trafik Işıkları -->
        <Circle fx:id="lightNorth" fill="red" layoutX="200" layoutY="20" radius="10" />
        <Circle fx:id="lightEast" fill="red" layoutX="380" layoutY="200" radius="10" />
        <Circle fx:id="lightWest" fill="red" layoutX="20" layoutY="200" radius="10" />
        <Circle fx:id="lightSouth" fill="red" layoutX="196.0" layoutY="316.0" radius="10" />
    </Pane>

    <!-- Araç Girişi -->
    <VBox layoutX="100" layoutY="150" spacing="10">
        <Label style="-fx-font-weight: bold; -fx-font-size: 16" text="Araç Yoğunluğu Girişi" />
        <HBox spacing="10">
            <Label text="North:" />
            <TextField fx:id="inputNorth" prefWidth="60" />
        </HBox>
        <HBox spacing="10">
            <Label text="South:" />
            <TextField fx:id="inputSouth" prefWidth="60" />
        </HBox>
        <HBox spacing="10">
            <Label text="East:" />
            <TextField fx:id="inputEast" prefWidth="60" />
        </HBox>
        <HBox spacing="10">
            <Label text="West:" />
            <TextField fx:id="inputWest" prefWidth="60" />
        </HBox>
        <Button fx:id="btnRandom" prefWidth="150" text="Rastgele Ata" />
    </VBox>

    <!-- Kontrol Düğmeleri -->
    <HBox layoutX="100" layoutY="420" spacing="15">
        <Button fx:id="btnStart" prefWidth="100" text="Başlat" />
        <Button fx:id="btnPause" prefWidth="100" text="Durdur" />
        <Button fx:id="btnReset" prefWidth="100" text="Sıfırla" />
    </HBox>

    <!-- Zamanlayıcı Etiketleri -->
    <VBox layoutX="1520" layoutY="150" spacing="15">
        <Label style="-fx-font-weight: bold; -fx-font-size: 16" text="Kalan Süreler" />
        <Label fx:id="timerNorth" text="North: 0s" />
        <Label fx:id="timerSouth" text="South: 0s" />
        <Label fx:id="timerEast" text="East: 0s" />
        <Label fx:id="timerWest" text="West: 0s" />
    </VBox>

</AnchorPane>